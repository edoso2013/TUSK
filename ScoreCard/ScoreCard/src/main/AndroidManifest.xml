<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scorecard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.scorecard.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.scorecard.SoccerActivity"
            android:label="@string/title_activity_soccer" >
        </activity>
        <activity
            android:name="com.scorecard.BaseballActivity"
            android:label="@string/title_activity_baseball" >
        </activity>
        <activity
            android:name="com.scorecard.BasketBallActivity"
            android:label="@string/title_activity_basket_ball" >
        </activity>
        <activity
            android:name="com.scorecard.FootballActivity"
            android:label="@string/title_activity_football" >
        </activity>
        <activity
            android:name="com.scorecard.SoccerGameActivity"
            android:label="@string/title_activity_soccer_game" >
        </activity>
        <activity
            android:name="com.scorecard.AddTeamActivity"
            android:label="@string/title_activity_add_team" >
        </activity>
        <activity
            android:name="com.scorecard.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".SendMailActivity"
            android:label="@string/title_activity_send_mail" >
        </activity>
    </application>

</manifest>
