<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/statisticTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/padding"
        android:text="@string/statistic_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:id="@+id/team1Players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statisticTitle"
        android:padding="@dimen/padding" >

        <TextView
            android:id="@+id/awayTeamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/padding"
            android:text="@string/stats_away_team_name" />

        <TextView
            android:id="@+id/player2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/player1Name"
            android:paddingRight="@dimen/padding"
            android:text="@string/stats_player_name" />

        <TextView
            android:id="@+id/player3Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/player2Name"
            android:paddingRight="@dimen/padding"
            android:text="@string/stats_player_name" />

        <TextView
            android:id="@+id/player4Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/player3Name"
            android:paddingRight="@dimen/padding"
            android:text="@string/stats_player_name" />

        <TextView
            android:id="@+id/player5Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/player4Name"
            android:paddingRight="@dimen/padding"
            android:text="@string/stats_player_name" />

        <TextView
            android:id="@+id/player8Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/player4Name"
            android:layout_alignLeft="@+id/player7Name"
            android:paddingRight="@dimen/padding"
            android:text="@string/stats_player_name" />

        <TextView
            android:id="@+id/player9Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/player5Name"
            android:layout_alignLeft="@+id/player8Name"
            android:paddingRight="@dimen/padding"
            android:text="@string/stats_player_name" />

        <TextView
            android:id="@+id/player10Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/player5Name"
            android:layout_alignBottom="@+id/player5Name"
            android:layout_alignLeft="@+id/player9Name"
            android:paddingRight="@dimen/padding"
            android:text="@string/stats_player_name" />

        <TextView
            android:id="@+id/player7Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/player2Name"
            android:layout_alignBottom="@+id/player2Name"
            android:layout_alignLeft="@+id/player6Name"
            android:paddingRight="@dimen/padding"
            android:text="@string/stats_player_name" />

        <TextView
            android:id="@+id/player6Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/homeTeamName"
            android:layout_below="@+id/homeTeamName"
            android:paddingRight="@dimen/padding"
            android:text="@string/stats_player_name" />

        <TextView
            android:id="@+id/player1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/awayTeamName"
            android:layout_below="@+id/awayTeamName"
            android:paddingRight="@dimen/padding"
            android:text="@string/stats_player_name" />

        <TextView
            android:id="@+id/homeTeamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/awayTeamName"
            android:layout_alignBottom="@+id/awayTeamName"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/player1Name"
            android:padding="@dimen/padding"
            android:text="@string/stats_home_team_name" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/team2Players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team1Players"
        android:padding="@dimen/padding" >
    </RelativeLayout>

</RelativeLayout>